        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TZXPKD9"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    @Html.Action("ShowHeader", "Home")

    <main>
        <div id="widget-left">
            <a class="item" href="/"><span class="fas fa-home"></span></a>
            <a class="subscribe" href="index.html"> <span>Đăng ký tư vấn</span></a>
            <a class="item download" href="@ViewBag.Gallery"><span class="mdi mdi-download"> </span><span class="brochure">Tải Brochure</span></a><span class="item"><span class="mdi mdi-phone-in-talk"></span><span class="hotline"><a href="tel:0943797979">TP. Hồ Chí Minh: 0943 797 979</a><a href="tel:0938550808">Hà Nội: 0938 550 808</a></span></span><a class="item go-first" href="#"><span class="mdi mdi-arrow-up-bold"></span></a>
        </div>
        @RenderBody()
    </main>
    @if (ViewBag.IsHideForm ?? true)
    {
        <div class="section" id="sec-9" fp-title="Liên hệ">
        <div class="img"><img class="ofcv" src="/Content/resources/assets/index/i_9.jpg" alt=""></div>
        <div class="content">
            <div class="title-block">
                <h2 class="title">đăng ký nhận thông tin dự án</h2>
                <div class="tagline"><img class="lazyload" data-src="/Content/resources/assets/tagline.png" alt=""></div>
            </div>
            @Html.Partial("/Views/Home/_Form.cshtml", new MainProject.Service.Model.Contact.ContactManageModel())
        </div>
    </div>
    }

    <script type="text/javascript" src="/Content/resources/js/core.min.js"></script>
    <script type="text/javascript" src="/Content/resources/js/main.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function onBegin() {
            $(".btn-discover").attr("disabled", "disabled");
            $(".btn-discover").text("Đang gửi....");
        }

        function onSuccess(response) {
            $(".btn-discover").removeAttr("disabled");
            $(".btn-discover").text("Đăng ký ngay");
            alert(response.Message);
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
